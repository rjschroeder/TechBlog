<div class="card text-center border-info m-3">
    <div class="card-header">
        <p>New Post</p>
    </div>
    <div class="card-body">
        <form id="newPostForm">
            <div class="form-group">
                <label for="title-input">Title</label>
                <input type="text" class="form-control" id="title-input" placeholder="Enter title">
            </div>
            <div class="form-group">
                <label for="content-input">Body</label>
                <input type="text" class="form-control" id="content-input" placeholder="Write something...">
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>
    </div>
</div>
<script src="/js/new.js"></script>